generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prize {
  id        String      @id @default(uuid())
  code      String      @unique
  name      String      @unique
  quantity  Int
  DatePrize DatePrize[]

  @@map("prizes")
}

model DatePrize {
  id            String   @id @default(uuid())
  dateHourPrize DateTime @unique
  awarded       Boolean  @default(false)

  prize      Prize  @relation(fields: [prize_code], references: [code])
  prize_code String
}
